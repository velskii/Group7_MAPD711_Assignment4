<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TableRow>
        <TextView
            android:text="User Name:"
            android:width="120dp" />
        <EditText
            android:id="@+id/username_update"
            android:width="200dp"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="password:"
            android:width="120dp" />
        <EditText
            android:id="@+id/password_update"
            android:width="200dp"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="firstname:"
            android:width="120dp" />
        <EditText
            android:id="@+id/firstname_update"
            android:width="200dp"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="lastname:"
            android:width="120dp" />
        <EditText
            android:id="@+id/lastname_update"
            android:width="200dp"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="address:"
            android:width="120dp" />
        <EditText
            android:id="@+id/address_update"
            android:width="200dp"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="city:"
            android:width="120dp" />
        <EditText
            android:id="@+id/city_update"
            android:width="200dp"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="postalCode:"
            android:width="120dp" />
        <EditText
            android:id="@+id/postal_code_update"
            android:width="200dp"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="telephone:"
            android:width="120dp" />
        <EditText
            android:id="@+id/telephone_update"
            android:width="200dp"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="email:"
            android:width="120dp" />
        <EditText
            android:id="@+id/email_update"
            android:width="200dp"/>
    </TableRow>


    <TableRow>
        <Button
            android:id="@+id/btnUpdate"
            android:layout_gravity="center_horizontal"
            android:text="Update"
            />
        <Button
            android:id="@+id/btnBackHome"
            android:layout_gravity="center_horizontal"
            android:text="Home"
            />
    </TableRow>


</TableLayout>